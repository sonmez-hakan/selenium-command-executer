        "by": "class",
        "name": "arama_kategori",
        "value": "otomobil",
        "type": "select"
      },
      {
        "by": "class",
        "name": "otomobil_select_marka",
        "value": "nissan/",
        "type": "select"
      },
      {
        "by": "class",
        "name": "otomobil_select_model",
        "value": "march/",
